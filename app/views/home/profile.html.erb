<h4 class="display-4 text-center">My Profile</h4>


<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">

        <div class="card" style="border-radius: 15px;">
          <div class="card-body text-center">
            <div class="mt-3 mb-4">
              <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png"
                class="rounded-circle img-fluid" style="width: 100px;" />
            </div>
            <h4 class="mb-2"><%=current_user.name%></h4>
            <p class="text-muted mb-4"><%=current_user.username%> <span class="mx-2">|</span> <a
                href="#!"><%=current_user.email%></a></p>
            <div class="mb-4 pb-2">
            <%= button_to "Edit My Profile",  edit_user_registration_path, class: 'btn btn-outline-primary btn-floating', method: 'get' %>
            </div>

            <%= button_to "My Keys",  keys_path, class: 'btn btn-primary btn-rounded btn-lg', method: 'get' %>

            <div class="d-flex justify-content-between text-center mt-5 mb-2">
              <div>
                <p class="mb-2 h5">My Subscription</p>
                <p class="text-muted mb-0"><%=current_user.subscription_choice %></p>
              </div>
              <div class="px-3">
                <p class="mb-2 h5">Joined on</p>
                <p class="text-muted mb-0"><%=time_ago_in_words(current_user.created_at) %></p>
              </div>
              <div>
                <p class="mb-2 h5">Login at:</p>
                <p class="text-muted mb-0"><%= time_ago_in_words(current_user.updated_at) %></p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>